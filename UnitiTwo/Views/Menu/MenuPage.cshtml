    var grid = mini.get("grid1");
    
    treegrid.on("nodeselect", function (e) {
        grid.load({ partenid: e.node.id });
        //if (e.isLeaf) {
        //    grid.load({ partenid: e.node.id });
        //} else {
        //    grid.setData([]);
        //    grid.setTotalCount(0);
